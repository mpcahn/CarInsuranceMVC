<div class="row no-gutters m-3">
    <div class="card col-sm-12 col-md-10 col-lg-6 mx-auto shadow">
        <div class="card-header text-center">
            <h4 class="m-0">Please Fill Out the Following Form to Recieve Your Quote</h4>
        </div>
        <div class="card-body" style="float: none; margin: 0 auto;">            
            <div class="row no-gutters">
                <div class="form-group col-md-12">
                    <input type="text" name="FirstName" class="form-control" placeholder="First Name" />
                </div>
                <div class="form-group col-md-12">
                    <input type="text" name="LastName" class="form-control" placeholder="Last Name" />
                </div>
                <div class="form-group col-md-12">
                    <input type="email" name="EmailAddress" class="form-control" placeholder="Email Address" />
                </div>
                <div class="form-group col-md-12">
                    <label>Date of Birth:</label>
                    <input type="date" name="DOB" class="form-control" />
                </div>
                <div class="form-group col-md-12">
                    <label>Car Year:</label>
                    <select class="form-control" name="CarYear">
                        @{
                            for (var i = 2018; i > 1927; i--)
                            {
                                <option>@i</option>
                            }
                        }
                    </select>
                </div>
                <div class="form-group col-md-12">
                    <input type="email" name="CarMake" class="form-control" placeholder="Car Make" />
                </div>
                <div class="form-group col-md-12">
                    <input type="text" name="CarModel" class="form-control" placeholder="Car Model" />
                </div>
                <div class="form-group col-md-12">
                    <label>Have you ever recieved a DUI?</label>
                    <div class="form-check">
                        <input class="form-check-input" type="radio" name="DUI" value="no" checked>
                        <label class="form-check-label" for="exampleRadios1">
                            No
                        </label>
                    </div>
                    <div class="form-check">
                        <input class="form-check-input" type="radio" name="DUI" value="yes">
                        <label class="form-check-label" for="exampleRadios2">
                            Yes
                        </label>
                    </div>
                </div>
                <div class="form-group col-md-12">
                    <label>Speeding tickets recieved in the last 3 years:</label>
                    <select class="form-control" name="SpeedingTickets">
                        @{
                            for (var i = 0; i < 10; i++)
                            {
                                <option>@i</option>
                            }
                        }
                    </select>
                </div>
                <div class="form-group col-md-12">
                    <label>Full coverage or liability?</label>
                    <select class="form-control" name="SpeedingTickets">
                        <option>Full Coverage</option>
                        <option>Liability</option>
                    </select>
                </div>
                <button type="submit" class="btn btn-block btn-primary">Submit</button>
            </div>            
        </div>
    </div>
</div>





